<?xml version="1.0"?>
<gconfschemafile>
<schemalist>
	<schema>
	  <key>/schemas/apps/gnome_settings_daemon/gtk-modules/globalmenu-gnome</key>
	  <applyto>/apps/gnome_settings_daemon/gtk-modules/globalmenu-gnome</applyto>
	  <owner>libglobalmenu-gnome</owner>
	  <type>bool</type>
	  <default>false</default>
	  <locale name="C">
		<short>Enable Global Menu For GTK applications</short>
		<long>If this key is true, libglobalmenu-gnome, the GTK plugin for Global Menu is loaded.</long>
	  </locale>
	</schema>
	<schema>
		<key>/schemas/apps/globalmenu-panel-applet/prefs/show_icon</key>
		<owner>globalmenu-panel-applet</owner>
		<type>bool</type>
		<default>FALSE</default>
		<locale name="C">
			<short>Icon</short>
			<long>Show/Hide the icon of the active window</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/globalmenu-panel-applet/prefs/show_name</key>
		<owner>globalmenu-panel-applet</owner>
		<type>bool</type>
		<default>TRUE</default>
		<locale name="C">
			<short>Label</short>
			<long>Show/Hide the name of the active application</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/globalmenu-panel-applet/prefs/show_window_list</key>
		<owner>globalmenu-panel-applet</owner>
		<type>bool</type>
		<default>TRUE</default>
		<locale name="C">
			<short>Window List</short>
			<long>Uses active application lablel as application switcher</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/globalmenu-panel-applet/prefs/show_window_actions</key>
		<owner>globalmenu-panel-applet</owner>
		<type>bool</type>
		<default>TRUE</default>
		<locale name="C">
			<short>Window Actions</short>
			<long>Add window action menu entries to active application name menu</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/globalmenu-panel-applet/prefs/title_max_width</key>
		<owner>globalmenu-panel-applet</owner>
		<type>int</type>
		<default>-1</default>
		<locale name="C">
			<short>Max title length</short>
			<long>The maximum length of name of the active application, in pixels</long>
		</locale>
	</schema>
</schemalist>
</gconfschemafile>
