   <piece position="titlebar" draw_ops="titlebar_normal_focused"/>
   <piece position="title" draw_ops="title_all"/>

   <button function="right_right_background" state="normal" draw_ops="bg_button_right_right_focused"/>
   <button function="right_middle_background" state="normal" draw_ops="bg_button_right_middle_focused"/>
