<gconfschemafile>
    <schemalist>
        <schema>
            <key>/schemas/apps/gnome-globalmenu-applet/show_icon</key>
            <applyto>/apps/gnome-globalmenu-applet/show_icon</applyto>
            <owner>gnome-globalmenu-applet</owner>
            <type>bool</type>
            <default>FALSE</default>
            <locale name="C">
				<short> Whether or not show the active window's icon</short>
				<long> Whether or not show the active window's icon</long>
            </locale>
		</schema>
        <schema>
            <key>/schemas/apps/gnome-globalmenu-applet/show_title</key>
            <applyto>/apps/gnome-globalmenu-applet/show_title</applyto>
            <owner>gnome-globalmenu-applet</owner>
            <type>bool</type>
            <default>TRUE</default>
            <locale name="C">
				<short> Whether or not show the active window's title</short>
				<long> Whether or not show the active window's title</long>
            </locale>
		</schema>
        <schema>
            <key>/schemas/apps/gnome-globalmenu-applet/show_arrows</key>
            <applyto>/apps/gnome-globalmenu-applet/show_arrows</applyto>
            <owner>gnome-globalmenu-applet</owner>
            <type>bool</type>
            <default>FALSE</default>
            <locale name="C">
				<short> Whether or not show the scrolling arrows</short>
				<long> Whether or not show the scrolling arrows</long>
            </locale>
		</schema>
        <schema>
            <key>/schemas/apps/gnome-globalmenu-applet/title_max_width_chars</key>
            <applyto>/apps/gnome-globalmenu-applet/title_max_width_chars</applyto>
            <owner>gnome-globalmenu-applet</owner>
            <type>int</type>
            <default>20</default>
            <locale name="C">
				<short> How long the title label should be</short>
				<long> How long the title label should be</long>
            </locale>
		</schema>
	</schemalist>
</gconfschemafile>

