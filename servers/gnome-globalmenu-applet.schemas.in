<gconfschemafile>
    <schemalist>
        <schema>
            <key>/schemas/apps/gnome-globalmenu-applet/prefs/show_icon</key>
            <owner>gnome-globalmenu-applet</owner>
            <type>bool</type>
            <default>FALSE</default>
            <locale name="C">
				<short>show the icon of the active window</short>
				<long> show the icon of the active window</long>
            </locale>
		</schema>
        <schema>
            <key>/schemas/apps/gnome-globalmenu-applet/prefs/show_title</key>
            <owner>gnome-globalmenu-applet</owner>
            <type>bool</type>
            <default>FALSE</default>
            <locale name="C">
				<short> show the title of active application</short>
				<long> show the title of active application</long>
            </locale>
		</schema>
	</schemalist>
</gconfschemafile>

