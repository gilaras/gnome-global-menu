<gconfschemafile>
    <schemalist>
        <schema>
            <key>/schemas/apps/gnome-globalmenu-applet/prefs/show_icon</key>
            <owner>gnome-globalmenu-applet</owner>
            <type>bool</type>
            <default>FALSE</default>
            <locale name="C">
				<short>Show/Hide the icon of the active window</short>
            </locale>
		</schema>
        <schema>
            <key>/schemas/apps/gnome-globalmenu-applet/prefs/show_title</key>
            <owner>gnome-globalmenu-applet</owner>
            <type>bool</type>
            <default>FALSE</default>
            <locale name="C">
				<short>Show/Hide the title of the active application</short>
            </locale>
		</schema>
		<schema>
			<key>/schemas/apps/gnome-globalmenu-applet/prefs/title_font</key>
			<owner>gnome-globalmenu-applet</owner>
			<type>string</type>
			<default>Sans Bold</default>
			<locale name="C">
				<short>The font used to display the title of the active application</short>
			</locale>
		</schema>
		<schema>
			<key>/schemas/apps/gnome-globalmenu-applet/prefs/title_max_width</key>
			<owner>gnome-globalmenu-applet</owner>
			<type>int</type>
			<default>-1</default>
			<locale name="C">
				<short>The Maximum length of title of the active application</short>
			</locale>
		</schema>
	</schemalist>
</gconfschemafile>

